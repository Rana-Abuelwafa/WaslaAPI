@using WaslaApp.Data.Models
@using WaslaApp.Data.Models.PackagesAndServices
@using WaslaApp.Data.Models.invoices
@model HtmlInvoice
@{
    Layout = null;  // explicitly no layout page here!
    // string title =  "Order Confirmation - " + config.ApplicationName;
    var user = Model.user;
    var contact = Model.contact;
    var Address = Model.address;
    var InvoiceNo = Model.InvoiceNo;
    var Date = Model.IssuedDate;
    var SubTtotal = Model.SubTtotal;
    var Discount = Model.Discount;
    var Total = Model.Total;
    var services = Model.services;
}



<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice</title>
</head>

<body style="font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #f7f7f7;">
    <div style="max-width: 600px; margin: 20px auto; background-color: #ffffff; padding: 30px; border: 1px solid #ddd;">
        <div style="text-align: center; border-bottom: 1px solid #707070;">
            <img src="https://api.waslaa.de/images/logo.png" alt="Wasla Logo" style="width: 100px; margin-bottom: 20px;" />
        </div>

        <div style="text-align:center;">
            <img src="https://api.waslaa.de/images/Emails/bill.png" alt="Verified" style="width: 80px; margin: 20px 0;" />
        </div>

        <div class="bg-content" style="padding: 20px;">
            <table style="width:100%;">
                <tr>
                    <td>
                        <p style="margin-bottom: 5px; color: #333; ">Rechnung an</p>
                        <strong>@user</strong>
                    </td>
                    <td style="text-align: right;">
                        <p style="margin-bottom: 5px; color: #333; ">Kontakt</p>
                        <strong>@contact</strong>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style="margin-bottom: 5px; color: #333; ">Adresse</p>
                        <strong>@Address</strong>
                    </td>

                </tr>
                <tr>
                    <td>
                        <p style="margin-bottom: 5px; color: #333; ">Rechnungsnr</p>
                        <strong>@InvoiceNo</strong>
                    </td>
                    <td style="text-align: right;">
                        <p style="margin-bottom: 5px; color: #333;">Ausstellungsdatum</p>
                        <strong>@Date</strong>
                    </td>
                </tr>
            </table>
            <hr style="margin: 30px 0;" />
            <table style="width:100%; margin: 20px auto;border-collapse:collapse;text-align: left;">
                <tr style="border-bottom:1px solid #ccc">
                    <th style="padding: 5px;">No.</th>
                    <th style="padding: 5px;">Produktartikelbeschreibung</th>
                    <th style="padding: 5px;">Preis (Monatlich)</th>
                </tr>
                @for (var i = 0; i < services.Count; i++)
                {
                    var no = @i + 1;
                    var service = services[i];
                    <tr style="border-bottom:1px solid #ccc">
                        <td style="padding:10px 0;">@no</td>
                        <td style="padding:10px 0;">@service.package_name - @service.service_name</td>
                        <td style="padding:10px 0;">@service.package_sale_price</td>
                    </tr>
                }

                <tr>
                    <th colspan="2"></th>
                    <th style="border-bottom: 1px solid #ccc; padding: 10px 0;">Zwischensumme</th>
                    <td style="padding: 10px 0; border-bottom: 1px solid #ccc;">@SubTtotal (Jährlich)</td>
                </tr>
                <tr>
                    <th colspan="2"></th>
                    <th style="border-bottom: 1px solid #ccc; padding: 10px 0;">Rabatt</th>
                    <td style="padding: 10px 0; border-bottom: 1px solid #ccc;">@Discount</td>
                </tr>
                <tr>
                    <th colspan="2"></th>
                    <th>Gesamt</th>
                    <td style="padding:10px 0;">@Total (Jährlich)</td>
                </tr>
            </table>
        </div>
        <div>
            <hr style="margin: 30px 0;" />
            <h3 style="color: #00b894;">
                Allgemeine Geschäftsbedingungen :
            </h3>
            <p style="color: #4b0082; font-weight: bold; letter-spacing: .5px; font-size: 12px;">
                Dieser Betrag umfasst bis zu zwei (2) Überarbeitungen des endgültigen Designs.
                Wenn der Kunde innerhalb von 5 Tagen nicht antwortet, wird das Projekt vorübergehend pausiert.
                Die Designrechte werden nach vollständiger Zahlung auf den Kunden übertragen.
            </p>
        </div>
        <hr style="margin: 30px 0;" />
        <div style="text-align: center;">
            <p>
                Machen Sie mit und werden Sie Teil der Waslaa-Familie!
            </p>
            <div>
                <a href="https://www.facebook.com/Waslaa.de" target="_blank" style="text-decoration:none">
                    <img src="https://api.waslaa.de/images/icons-facebook.png" alt="Facebook" style="margin: 0 5px;" />
                </a>
                <a href="https://www.instagram.com/waslaa.de" target="_blank" style="text-decoration:none">
                    <img src="https://api.waslaa.de/images/icons-instagram.png" alt="Instagram" style="margin: 0 5px;" />
                </a>
                <a href="waslaa.2025@gmail.com" target="_blank" style="text-decoration:none">
                    <img src="https://api.waslaa.de/images/icons-gmail.png" alt="Email" style="margin: 0 5px;" />
                </a>
                <a href="https://x.com/waslaade" target="_blank" style="text-decoration:none">
                    <img src="https://api.waslaa.de/images/icons-twitter.png" alt="x" style="margin: 0 5px;" />
                </a>
            </div>
        </div>
    </div>

</body>


</html>